<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/class_info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/collage"/>

            <TextView
                android:id="@+id/dis_college"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/grade" />

            <TextView
                android:id="@+id/dis_grade"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/course_name" />

            <TextView
                android:id="@+id/dis_course"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/teacher" />

            <TextView
                android:id="@+id/dis_teacher"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/class_location" />

            <TextView
                android:id="@+id/dis_class_location"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/able_sign_time"/>

            <TextView
                android:id="@+id/dis_able_sign_time"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/created_time"/>

            <TextView
                android:id="@+id/dis_created_time"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sign_time"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/dis_signed_time"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/round3"
                android:text="@string/cur_class"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>