<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/commission_info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/commission_title"/>

            <TextView
                android:id="@+id/dis_commission_title"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/commission_content" />

            <TextView
                android:id="@+id/dis_commission_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/commission_position" />

            <TextView
                android:id="@+id/dis_commission_position"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/comission_reward" />

            <TextView
                android:id="@+id/dis_comission_reward"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/publish_time" />

            <TextView
                android:id="@+id/dis_publish_time"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_creator_nickname"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:text="@string/creator_nickname"/>

            <TextView
                android:id="@+id/dis_creator_nickname"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_contact_consignor"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/round3"
                android:text="@string/contact_consignor"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>